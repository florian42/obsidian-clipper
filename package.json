{
  "name": "obsidian-clipper",
  "version": "0.1.0",
  "description": "Obsidian Web Clipper Chrome Extension to save articles and pages from the web in Obsidian",
  "private": true,
  "scripts": {
    "watch": "webpack --mode=development --watch --config config/webpack.config.js",
    "build": "webpack --mode=production --config config/webpack.config.js",
    "format": "prettier --write --ignore-unknown \"{config,public,src}/**/*.{html,css,js,ts,json}\"",
    "test": "jest",
    "package": "npm run build && cd build && zip -r obsidian-clipper.zip ."
  },
  "devDependencies": {
    "@types/chrome": "^0.0.181",
    "@types/jest": "^29.2.6",
    "@types/js-yaml": "^4.0.5",
    "@types/turndown": "^5.0.1",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.3",
    "file-loader": "^6.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-webextension-mock": "^3.8.8",
    "js-yaml": "^4.1.0",
    "mini-css-extract-plugin": "^2.7.2",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@mozilla/readability": "^0.4.2",
    "turndown": "^7.1.1"
  }
}
